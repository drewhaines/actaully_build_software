= form_for @course do |f|
  - if @course.errors.any?
    #error_explanation
      %h2= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:"
      %ul
        - @course.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :feature_img
    = f.text_field :feature_img
  .field
    = f.label :small_imgage
    = f.text_field :small_imgage
  .field
    = f.label :small_dark_imgage
    = f.text_field :small_dark_imgage
  .actions
    = f.submit 'Save'
