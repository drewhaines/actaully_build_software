= form_for @lesson do |f|
  - if @lesson.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lesson.errors.count, "error")} prohibited this lesson from being saved:"
      %ul
        - @lesson.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :video
    = f.text_field :video
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :Course
    = f.collection_select :course_id, Course.all, :id, :title
  .actions
    = f.submit 'Save'
